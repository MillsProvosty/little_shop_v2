<h1>Admin Dashboard</h1>

<article class="all-orders">
  <% @all_orders_sorted.each do |order| %>
  <section id="order-<%= order.id %>" class="orders">
    <p>Username: <%= order.user.name %></p>
    <p>Order Id: <%= order.id %></p>
    <p>Created: <%= order.created_at %></p>
    <p>Created: <%= order.status %></p>
    <% if order.status == "packaged" %>
    <%= button_to "Ship", admin_order_path(order), method: :patch %>
    <% end %>
  </section>
  <% end %>
</article>
