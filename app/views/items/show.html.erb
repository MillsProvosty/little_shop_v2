<div>
  <% unless current_admin? or current_merchant? %>
    <%= button_to "Add Item to Cart", carts_path(item_id: @item.id) %>
  <%end%>
</div>



<div>
  <p><img src="<%= @item.image %>"></p>
  <p><%= @item.name %></p>
  <p>Price: <%= number_to_currency(@item.price) %></p>
  <p>Description: <%= @item.description %></p>
  <p>Merchant: <%= @item.user.name %></p>
  <p>Availability: <%= @item.inventory %></p>
  <p>Average Fulfilled Time: <%= @item.avg_fulfill_time %> hours</p>
</div>
